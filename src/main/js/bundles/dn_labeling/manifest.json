{
    "name": "dn_labeling",
    "version": "1.1.2-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "keywords": [
        "sample"
    ],
    "main": "",
    "dependencies": {
        "ct" : "^4.13.0",
        "apprt-core": "^4.13.0",
        "apprt-binding": "^4.13.0",
        "apprt-vue": "^4.13.0",
        "esri": "^4.22.0"
    },
    "productName": "devnet-mapapps-labeling",
	"layout-widgets": [
		{
			"widgetRole": "labelingWidget",
			"window": {
				"title": "${ui.title}",
				"dockTool": "labelingToggleTool",
                "closable": true,
                "maximizable": false,
                "minimizeOnClose": true,
                "resizable": true,
				"closeOnEscape": false,
				"marginBox": {
					"w": 420,
					"h": 500,
					"t": 135,
					"l": 20
				},
				"minSize": {
					"w": 420,
					"h": 400
				}
			}
		}
	],
    "cssThemesExtension": [
        {
            "name":"*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
	"components": [
        {
            "name": "Config",
            "provides": "dn_labeling.LabelingModel",
            "propertiesConstructor": true,
            "properties": {
                "clickTolerance": 10,
                "hoverSymbol": {
					"type": "simple-marker",
					"style": "circle",
					"color": "red",
					"size": "10px",
					"outline": {
						"width": 0
					}
				},
				"textSymbol": {
					"type": "text",
					"haloColor": "white",
					"haloSize": "2px",
					"font": {
						"size": 12
					}
				},
				"lengthUnit": "meters",
				"generalization": {
					"maxDeviationUnit": "meters",
					"maxDeviation": 0.5,
					"removeDegenerateParts": true
				}
            }
        },
        {
            "name": "LabelingWidgetFactory",
            "provides": ["dijit.Widget"],
            "instanceFactory": true,
            "properties": {
                "widgetRole": "labelingWidget"
            },
            "references": [
                {
                    "name": "_controller",
                    "providing": "dn_labeling.LabelingController"
                },
                {
                    "name": "_labelingModel",
                    "providing": "dn_labeling.LabelingModel"
                }
            ]
        },
		{
			"name": "LabelingController",
			"provides": ["dn_labeling.LabelingController"],
			"references": [
				{
					"name": "_mapWidgetModel",
					"providing": "map-widget.MapWidgetModel"
				},
                {
                    "name": "_labelingModel",
                    "providing": "dn_labeling.LabelingModel"
                }
			]
		},
		{
			"name": "LabelingToggleTool",
			"impl": "ct/tools/Tool",
			"provides" : ["ct.tools.Tool"],
			"propertiesConstructor": true,
			"properties": {
				"id": "labelingToggleTool",
				"title": "${ui.title}",
				"tooltip": "${ui.tooltip}",
				"iconClass": "esri-icon-labels",
				"toolRole": "toolset",
				"togglable": true,
                "activateHandler": "onToolActivated",
                "deactivateHandler": "onToolDeactivated"
			},
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_labeling.LabelingController"
                }
            ]
		}
	]
}
